<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="250dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgproducticon"
            android:background="@drawable/ic_launcher_foreground">

        </ImageView>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txtproductname"
    android:textSize="20dp"
    android:text="ProductName"
    android:layout_gravity="center"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtproductcost"
                android:textSize="20dp"
                android:text="PerCost"
                android:layout_gravity="center">

</TextView>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageButton android:background="?selectableItemBackgroundBorderless"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"

                    android:layout_width="wrap_content" android:layout_height="50dp" android:tint="@color/grey_40" app:srcCompat="@drawable/ic_add"
                    android:layout_marginTop="15dp"/>
                <TextView  android:id="@+id/cartitemQuantity"  android:textAppearance="@style/TextAppearance.AppCompat.Subhead" android:textColor="@color/grey_90" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="@dimen/spacing_medium" android:text="1" android:layout_weight="1.0" app:fontFamily="sans-serif-medium" />
                <ImageButton android:background="?selectableItemBackgroundBorderless"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content" android:layout_height="50dp" android:tint="@color/grey_40" app:srcCompat="@drawable/ic_remove" />
            </LinearLayout>
        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>